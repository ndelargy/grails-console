<div class="files-page-header">
    <h1>Local Files</h1>
</div>


{{#if files}}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Date Modified</th>
        </tr>
        </thead>
      {{#each files}}
          <tr data-file-id="{{id}}">
              <td><a class="delete" href="#"><i class="icon-trash"></i></a></td>
              <td><a class="name" href="#">{{name}}</a></td>
              <td>{{dateFormatTime lastModified}}</td>
          </tr>
      {{/each}}
    </table>
{{else}}
    <div>
        <div class="message">No files</div>
    </div>
{{/if}}