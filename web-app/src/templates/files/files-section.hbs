<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Files</h4>
    </div>

    <div class="modal-body">
        <div class="files-header">
            <div class="section">
                <form class="form-horizontal file-info">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Save as</label>

                        <div class="col-sm-10">
                            <input class="form-control" type="text"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">File store</label>

                        <div class="col-sm-10">
                            <select class="form-control" name="store">
                                <option value="local">Local</option>
                                <option value="remote">Remote</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="file-path-region section"></div>
        </div>
        <div class="files-body">
            <div class="store full-height">
                <div class="local full-height"></div>
                <div class="remote full-height"></div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
    </div>
</div>
<!-- /.modal-content -->